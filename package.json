{
  "name": "messages",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.5.1",
    "check-types": "^7.3.0",
    "cross-env": "^5.1.3",
    "death": "^1.1.0",
    "debug": "^3.1.0",
    "dotenv": "^5.0.1",
    "protobufjs": "^6.8.6",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.1",
    "babel-plugin-transform-async-to-bluebird": "^1.1.1",
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",
    "babel-plugin-transform-es2015-for-of": "^6.23.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-es2015-spread": "^6.22.0",
    "babel-plugin-transform-es2015-template-literals": "^6.22.0",
    "babel-plugin-transform-exponentiation-operator": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-watch": "^2.0.7",
    "eslint": "^4.18.1",
    "eslint-plugin-jsdoc": "3.3.1",
    "jest": "^22.4.2",
    "regenerator-runtime": "^0.11.1",
    "tempfile": "^2.0.0"
  },
  "scripts": {
    "copy:assets": "cp src/product/*.proto dist/product/",
    "clean": "rimraf {cache,coverage,dist}",
    "lint": "eslint .",
    "watch": "cross-env DEBUG=consumer:product:operations:log babel-watch -L src/index.js --ignore **/*.spec.js",
    "build": "yarn clean && yarn lint && babel src -d dist --ignore **/*.spec.js && yarn copy:assets",
    "build:dev": "yarn clean && yarn lint && babel src -d dist --ignore **/*.spec.js --source-maps inline && yarn copy:assets",
    "migrate:up": "knex migrate:latest --knexfile ./src/db/config.js",
    "migrate:down": "knex migrate:rollback --knexfile ./src/db/config.js",
    "test": "cross-env DEBUG=message:log jest --config jest.config.js --forceExit",
    "start": "yarn build && cross-env DEBUG=* node ./dist/index.js"
  }
}
